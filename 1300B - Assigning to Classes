#include <iostream>
#include <bits/stdc++.h>
using namespace std;

int main()
{
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        int a = 2*n;
        int arr[a];
        for(int i=0;i<a;i++) cin>>arr[i];
        sort(arr,arr+a);
        cout<<arr[a/2] - arr[(a/2)-1]<<endl;
    }
    return 0;
}
